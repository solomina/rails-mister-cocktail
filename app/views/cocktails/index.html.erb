<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://static.pexels.com/photos/97135/pexels-photo-97135.jpeg');">
  <div class="banner-content">
    <h1>Create your own cocktail</h1>
    <p></p>

  </div>
</div>




<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>





<p id="notice"><%= notice %></p>
<div class="text-center">

  <h1>Cocktails</h1>
  <div class="product">
    <table class="text-center">
      <thead >
        <tr>
          <th class="text-center">Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody >
        <% @cocktails.each do |cocktail| %>
        <tr>


          <div class="row">

            <td><div class="col-md-4"><%= cocktail.name %></div></td>

            <td><div class="col-md-4"><%= link_to 'Show', cocktail, class: "btn btn-primary" %></div></td>

           <td> <div class="col-md-4"> <%= link_to 'Destroy', cocktail, class: "btn btn-primary",method: :delete, data: { confirm: 'Are you sure?' } %></div></td>

          </div>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-primary" %>
</div>
